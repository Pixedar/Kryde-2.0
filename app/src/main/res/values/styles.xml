<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="CustomTabText" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="redCheck" parent="TextAppearance.Design.Tab">
        <item name="colorAccent">@color/red</item>
    </style>

    <style name="greenCheck" parent="TextAppearance.Design.Tab">
        <item name="colorAccent">@color/green2</item>
    </style>

    <style name="blueCheck" parent="TextAppearance.Design.Tab">
        <item name="colorAccent">@color/blue</item>
    </style>

</resources>
